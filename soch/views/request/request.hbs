<h2 class="text-center">Support Request Details</h2>

<form>
    <div class="form-row">
        <div class="form-group col-md-2">
            <a href="/request/request/create-new" class="btn btn-primary btn-outline-dark p-2 mb-2">New Support
                Request</a>
        </div>
        <div class="form-group col-md-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    {{!-- <a class="breadcrumb-item"><a href="/supportRequest">Request</a></a> --}}
                    <li class="breadcrumb-item active" aria-current="page">Request</li>
                </ol>
            </nav>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Request ID</th>
                <th scope="col">Request Subject</th>
                <th scope="col">Department</th>
                <th scope="col">Desc</th>
                <th scope="col">Created On</th>
                {{!-- <th scope="col">Status</th> --}}



            </tr>
        </thead>
        <tbody>
            {{#each request }}
            <tr>
                <td>{{this.id}}</td>
                <td> <a href="/request/request/{{this.alias}}">{{this.alias}}</a></td>
                {{!-- <a> <a href="/request/supportRequest/{{this.alias}}">{{this.requestsubjects}}</a></a> --}}
                <td>{{this.requestsubjects}}</td>
                <td>{{this.department}}</td>
                <td>{{this.description}}</td>
                <td>{{this.createdOn}}</td>

            </tr>
            {{/each}}
        </tbody>
    </table>