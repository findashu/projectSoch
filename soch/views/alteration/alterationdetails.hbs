<h2 class="text-center">Alteration Bill Details</h2>
<a href="/alterationdetails/alteration/create-new" class="btn btn-primary p-2 mb-2">Create Alteration Bill</a>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Header</th>
                <th>Header</th>
                <th>Header</th>
                <th>Header</th>
            </tr>
        </thead>
        <tbody>
            {{#each alteration}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.customername}}</td>
                <td><a href="/alterationdetails/alteration/{{this.alias}}">{{this.customernumber}}</a></td>

            </tr>
            {{/each}}
        </tbody>
    </table>
</div>